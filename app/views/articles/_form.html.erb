<%= form_for @article,html:{class: "article_form",data: {edit: !@article.new_record?}} do |f|%>
      <%qiniu_token=generate_qiniu_upload_token %>
      <%= hidden_field_tag :token, qiniu_token%>

      <div class="form-group">
        <%= f.label :title, "标题"%>
        <%= f.text_field :title,class: "form-control"%>
        <div class="error">
          <%= @article.errors[:title].join(",")%>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :content,"内容"%>
        <%= f.text_area :content, value: (@article.content),class: "form-control article_content"%>
        <div class="error">
          <%= @article.errors[:content].join(",")%>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit(action_name == "edit" ? "更新" : "保存",class: "btn btn-success")%>
      </div>
    <%end%>