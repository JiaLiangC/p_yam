<div class="login_or_register ">
  <div class="login-triggle">
    <%= link_to "登陆",login_path,class: "#{controller_name=='sessions' ? 'active' : ''}"%>
    &bull;
    <%= link_to "注册", signup_path,class: "#{controller_name=='sessions' ? '' : 'active'}"%>
  </div>
  <div class="login">
    <%= form_for(@user, url: (controller_name == "users" ? signup_path : login_path)) do |f| %>


      <div class="form-group">
        <%= f.text_field :account, autofocus: true,class: "form-control", placeholder: "请输入昵称,邮箱或者手机号" %>
      </div>

      <div class="form-group">

        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off",class: "form-control",placeholder: "请输入密码" %>
      </div>

      <%if controller_name == "users"%>
        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off",class: "form-control",placeholder: "请再次输入密码"%>
        </div>

        <div class="form-group verify">
          <%= f.text_field :verify_code, class: "form-control",placeholder: "短信验证码"%>
          <%= link_to "点击获取", "javascript:void(0);",class: "js-send-sms  ", id: "send-sms"%>
        </div>
      <%end%>

      <div class="submit">
        <%= f.submit "#{controller_name == 'users' ? '注册' : '登陆'}",class: "btn btn-success btn-block" %>
      </div>
    <% end %>
    <!-- <%#= render "devise/shared/links" %> -->
  </div>
      
</div>


